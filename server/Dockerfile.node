# syntax=docker/dockerfile:1
# check=error=true

FROM node:25-slim AS shared
USER node
WORKDIR /app

COPY package.json package-lock.json ./
RUN npm ci --omit=dev

FROM shared AS build

RUN npm ci

COPY tsconfig.json ./
COPY src/ src/

RUN npx tsc

FROM shared AS server

COPY --from=build /app/build /app/build

EXPOSE 4416
ENTRYPOINT ["node", "build/main.js"]
