FROM node:25-slim AS build
WORKDIR /app

COPY package.json package-lock.json ./
RUN npm ci

COPY tsconfig.json ./
COPY src/ src/
RUN npx tsc

FROM node:25-slim
EXPOSE 4416
WORKDIR /app

COPY --from=build /app/build /app/build
COPY package.json package-lock.json ./
RUN npm ci --omit=dev
USER node

ENTRYPOINT ["node", "build/main.js"]
