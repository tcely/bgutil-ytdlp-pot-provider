FROM denoland/deno:alpine-2.5.6
EXPOSE 4416
RUN mkdir /app
RUN chown deno /app
USER deno
WORKDIR /app

COPY tsconfig.json package.json deno.lock ./
COPY src/ src/
RUN deno install --allow-scripts=npm:canvas --frozen --entrypoint src/main.ts
RUN deno cache src/main.ts

ENTRYPOINT ["deno", "run", "--allow-env", "--allow-ffi", "--allow-net", "--allow-read=/app/node_modules", "src/main.ts"]
